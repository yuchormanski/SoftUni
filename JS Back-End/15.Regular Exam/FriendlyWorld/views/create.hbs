<main class="create">
    <!-- Create Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Add item</h2>
            <form class="create-form" method="post" action="/animals/create">
                <input type="text" name="name" id="name" placeholder="Name" value="{{animal.name}}"/>
                <input type="text" name="years" id="years" placeholder="Years" value="{{animal.years}}"/>
                <input type="text" name="kind" id="kind" placeholder="Kind" value="{{animal.kind}}"/>
                <input type="text" name="imageUrl" id="animal-img" placeholder="Image url" value="{{animal.imageUrl}}"/>
                <input type="text" name="need" id="needs-of" placeholder="Needs of" value="{{animal.need}}"/>
                <input type="text" name="location" id="location" placeholder="Location" value="{{animal.location}}"/>
                <textarea id="description" placeholder="Description..." name="description">{{animal.description}}</textarea>

                <button type="submit">Post</button>
            </form>
        </div>
    </section>
</main>