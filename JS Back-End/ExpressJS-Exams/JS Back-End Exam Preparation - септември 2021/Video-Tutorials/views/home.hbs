<main>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Video Tutorials</h1>
            <p class="lead">Start Self-Study Today: It'll Change Your Life</p>
        </div>
    </div>

    <div>
        <h1 class="text-center">All Courses</h1>
        <div class="container mt-3">

            <div class="card-deck d-flex justify-content-center">
                {{#if loaded}}
                {{#each loaded}}
                {{> homePage}}
                {{/each}}
                {{else}}

                <!-- If there are still no courses in the database display: -->
                <h4 class="text-center">No courses...</h4>
                {{/if}}
            </div>
        </div>
    </div>

</main>