<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br>{{book.reviewTitle}}</h2>
            <h3>Author: {{book.author}}</h3>
            <h3>Stars: {{book.stars}}</h3>
            <h3>Genre: {{book.genre}}</h3>
            <h3>Review: {{book.review}}</h3>

            {{#if user}}

            <div class="buttons">
                {{#if book.isOwner}}
                    <a href="/catalog/{{book._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/catalog/{{book._id}}/delete" class="btn-delete">Delete</a>
                {{else}}
                    {{#if book.isWished}}
                        <p class="wish-pub">You already added the book to your wish list</p>
                    {{else}}
                        <a href="/catalog/{{book._id}}/wish" class="btn-wish">Wish to read</a>
                    {{/if}}
                {{/if}}
            </div>

            {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{book.imageUrl}}">
        </article>

    </article>
</section>