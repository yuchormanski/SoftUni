<main id="create">
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    {{#if errors}}
    <div>
        <div class="errorContainer">
            {{#each errors}}
            <p>{{this}}</p>
            {{/each}}
        </div>
    </div>
    {{/if}}
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form action="/games/create" method="post">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    <option value="">-------</option>
                    <option value="PC">PC</option>
                    <option value="Nintendo">Nintendo</option>
                    <option value="PS4">PS4</option>
                    <option value="PS5">PS5</option>
                    <option value="XBOX">XBOX</option>
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="title" value="{{game.title}}">
                <label>Image:</label>
                <input type="text" id="image" name="imageUrl" placeholder="http://..." value="{{game.imageUrl}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{game.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{game.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{game.description}}</textarea>

                <input type="submit" id="btn" value="CREATE"></input>
            </form>
        </div>
    </section>
</main>