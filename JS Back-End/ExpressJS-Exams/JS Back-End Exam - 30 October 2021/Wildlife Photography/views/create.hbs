<main>

    <section id="create-page">
        <div class="createSection">
            <div class="info">
                <h2>Create your post, share information about wildlife.</h2>
            </div>

            <form action="/posts/create" method="post" class="createForm">
                <h2>Create Post</h2>
                <ul class="noBullet">
                    <li>
                        <label for="title">Title:</label>
                        <input type="text" class="inputFields" id="title" placeholder="Two golden snub-nosed monkeys"
                            name="title" value="{{post.title}}" />
                    </li>
                    <li>
                        <label for="key-word">Keyword:</label>
                        <input type="text" class="inputFields" id="keyword" placeholder="Animal" name="keyword" value="{{post.keyword}}" />
                    </li>
                    <li>
                        <label for="location">Location:</label>
                        <input type="text" class="inputFields" id="location" placeholder="North America" name="location"
                            value="{{post.location}}" />
                    </li>
                    <li>
                        <label for="date">Date of creation:</label>
                        <input type="text" class="inputFields" id="date" placeholder="18.02.2021" name="date" value="{{post.date}}" />
                    </li>
                    <li>
                        <label for="image">Wildlife image:</label>
                        <input type="text" class="inputFields" id="image" placeholder="http:/..." name="imageUrl" value="{{post.imageUrl}}" />
                    </li>
                    <li>
                        <label for="description">Description:</label>
                        <textarea id="description" class="inputFields" name="description" placeholder="Monkey is...">{{post.description}}</textarea>
                    </li>
                    <li id="center-btn">
                        <button id="create-btn">Create</button>
                    </li>
                </ul>
            </form>

        </div>
    </section>

</main>