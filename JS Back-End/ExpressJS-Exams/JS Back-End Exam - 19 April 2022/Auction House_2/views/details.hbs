<!-- Details Page - Auction owner -->
<section id="catalog-section">

    <h1 class="item">
        {{auction.title}}
        <div class="f-right">
            {{#if auction.isOwner}}
            <a class="action pad-small f-left" href="/actions/edit/{{auction._id}}">Edit</a>
            <a class="action pad-small f-left" href="/actions/delete/{{auction._id}}">Delete</a>
            {{/if}}
        </div>
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{auction.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">
                <p>In category: <strong>{{auction.categoryValue}}</strong></p>
                <p>{{auction.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{auction.price}}</strong>
                    </div>

    {{!-- if has user --}}
        {{#if isAuthenticated}}
        {{!-- if user is owner --}}
            {{#if auction.isOwner}}
            {{!-- if auction has bidder --}}
                {{#if auction.hasBidder}}
                <div>
                    Bid by <strong>{{auction.bidderFullName}}</strong>
                        <a class="action pad-med cta" href="/actions/close/{{auction._id}}">Close Auction</a>
                {{else}}
                    <!-- If there are no bids -->
                    No bids
                </div>
                {{/if}}
            {{else}}
                {{#if auction.isBidder}}
                        <!-- If current user is the bidder -->
                        <div>
                            You are currently the <strong>highest bidder</strong> for this auction
                        </div>
                {{else}}        
                        <!-- If current user can place a bid -->
                        <form class="vertical" method="post" action="/actions/bid/{{auction._id}}">
                            <label><span>Bid amount</span><input type="number" name="bid"></label>
                            <input class="action" type="submit" value="Place bid">
                        </form>
                {{/if}}
            {{/if}}
        {{/if}}
                </div>

            </div>
        </div>

        <footer>Listed by {{auction.authorFullName}}</footer>
    </div>

</section>