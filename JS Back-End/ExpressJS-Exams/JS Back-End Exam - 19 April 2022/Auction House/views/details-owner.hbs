<section id="catalog-section">


    <h1 class="item">
        {{element.auctionTitle}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/action/edit/{{element._id}}">Edit</a>
            <a class="action pad-small f-left" href="/action/delete/{{element._id}}">Delete</a>
        </div>
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{element.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{element.category}}</strong></p>
                <p>{{element.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{element.price}}</strong>
                    </div>

                    <div>
                        <!-- If there is a bidder -->
                        Bid by <strong>John Maclane</strong>

                        <!-- # Bonus: If there is a bidder --><!--

                                    <a class="action pad-med cta" href="#">Close Auction</a>
                                    
                                    # End of Bonus -->

                        <!-- If there are no bids -->
                        No bids
                    </div>
                </div>

            </div>
        </div>

        <footer>Listed by {{user.firstName}} {{user.lastName}}</footer>
    </div>

</section>