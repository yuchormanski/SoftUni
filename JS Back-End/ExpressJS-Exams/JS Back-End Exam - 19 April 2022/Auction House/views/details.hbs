<section id="catalog-section">
    <h1 class="item"> {{element.auctionTitle}} </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{element.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{element.category}}</strong></p>
                <p>{{element.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{element.price}}</strong>
                    </div>

                    <!-- If current user can place a bid -->
                    <form class="vertical" method="post" action="#">
                        <label><span>Bid amount</span><input type="number" name=""></label>
                        <input class="action" type="submit" value="Place bid">
                    </form>

                    <!-- If current user is the bidder -->
                    <div>
                        You are currently the <strong>highest bidder</strong> for this auction
                    </div>

                </div>

            </div>
        </div>

        <footer>Listed by {{user.firstName}} {{user.lastName}}</footer>
    </div>


</section>